= tabs do
  = tab 'Poll' do
    = render 'admin/polls/form_poll', poll: poll

  - if poll.persisted?
    = tab 'Questions' do
      - datatable = Admin::EffectivePollQuestionsDatatable.new(poll_id: poll.id)
      = render_datatable(datatable, inline: true, simple: true)

    = tab 'Notifications' do
      %p Notifications
